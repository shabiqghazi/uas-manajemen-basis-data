<%- include('include/_header.ejs') -%>
<div class="row justify-content-center">
  <div class="col-lg-9">
    <h1 class="h3 mb-4 text-center">User Management</h1>
    <a href="/add_user" class="btn btn-secondary">
      <i class="fa-solid fa-user-plus me-2"></i>
      <span>Tambah</span>
    </a>
    <table class="table mt-2">
      <thead class="table-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nama</th>
          <th scope="col">Email</th>
          <th scope="col">Jenis Kelamin</th>
          <th scope="col">Status</th>
          <th scope="col">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < users.length; i++) { %>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td><%= users[i].nama %></td>
          <td><%= users[i].email %></td>
          <td><%= users[i].jenisKelamin %></td>
          <td><%= users[i].status %></td>
          <td>
            <a
              href="/update_user?id=<%= users[i]._id %>"
              class="btn btn-outline-success btn-sm me-1"
            >
              <i class="fa-solid fa-fw fa-pencil"></i>
            </a>
            <button
              class="btn btn-outline-danger btn-sm delete_user"
              id="ss"
              data-id="<%= users[i]._id %>"
            >
              <i class="fa-solid fa-fw fa-trash-can"></i>
            </button>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
<script src="js/deleteUser.js"></script>
<%- include('include/_footer.ejs') -%>
